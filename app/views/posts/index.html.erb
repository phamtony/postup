<h1>Posts</h1>
 
<% @posts.in_groups_of(3) do |group| %>
	<div class="row">
		<% group.compact.each do |post| %>
			<div class="span4">
				<%= link_to post.name, post%>
				<%= image_tag post.picture_url, :width => '25%' if post.picture.present? %>
				<%= post.quote %>
				<%= link_to 'Edit', edit_post_path(post) %>
			</div>
		<% end %>
	</div>
<% end %>